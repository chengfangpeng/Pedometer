<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg">

    <include
        android:id="@+id/topbar"
        layout="@layout/top_bar" />

    <RadioGroup
        android:id="@+id/home_rg"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/rg_totop_size"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_rb_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rg_selector"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="@dimen/rg_top_padding"
            android:paddingLeft="@dimen/rg_left_padding"
            android:paddingRight="@dimen/rg_left_padding"
            android:paddingTop="@dimen/rg_top_padding"
            android:text="@string/today_steps"
            android:textColor="@color/color_text_rb_selector"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/home_rb_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rg_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/rg_top_padding"
            android:paddingLeft="@dimen/rg_left_padding"
            android:paddingRight="@dimen/rg_left_padding"
            android:paddingTop="@dimen/rg_top_padding"
            android:text="@string/history_steps"
            android:textColor="@color/color_text_rb_selector"
            android:textSize="14sp" />


    </RadioGroup>


    <FrameLayout

        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_rg"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/transparent" />
</RelativeLayout>
