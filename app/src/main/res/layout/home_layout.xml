<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >

    <com.cnwir.pedometer.view.ScaleProgress
        android:id="@+id/scaleProgress"

        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scaleProgress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/home_submit_data"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_pressed_selector"
            android:text="@string/submit_data"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/home_circle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/home_submit_data"
            android:background="@drawable/btn_pressed_selector"
            android:text="@string/circle"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>
</RelativeLayout>
